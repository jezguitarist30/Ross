@*
    Renders a search field.
*@

@inherits UmbracoTemplatePage
  
<div class="side-widget">
    <h4>Search</h4>
    <div class="widget-content">
        <!-- search button and input box -->
        <form role="form" class="form-inline bform">
            <div class="form-group">
                <input id="uBlogsyTxtSearch" type="text" class="form-control" placeholder="Type to search">
            </div>
            <button id="uBlogsyBtnSearch" type="button" class="btn btn-info">Search</button>
        </form>
    </div>
</div>
